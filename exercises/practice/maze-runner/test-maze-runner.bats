#!/usr/bin/env bats

@test "maze-runner.awk produces expected output" {
  # Input maze
  read -r -d '' input <<'EOF'
────┬─────────┬─────────┬───────┬───┐
⇨   │         │         │       │   │
┌─┐ └─┐ ┌─┐ │ └─┐ ──┬── │ ──┐ │ │ ──┘
│ │   │ │ │ │   │   │   │   │ │ │   ⇨
│ └─┐ │ │ │ ├─┐ └─┐ └─┐ │ ┌─┘ │ │ │ │
│   │ │   │ │ │   │   │ │ │   │ │ │ │
│ ──┘ ├───┘ │ └── │ │ └─┘ │ ┌─┘ │ │ │
│     │     │     │ │     │ │   │ │ │
│ ────┤ ────┴───┐ ├─┴───┐ │ │ ┌─┴─┤ │
│     │         │ │     │ │ │ │   │ │
├──── └──────── │ │ ┌── └─┘ │ │ │ │ │
│               │   │       │   │   │
└───────────────┴───┴───────┴───┴───┘
EOF

  # Expected output
  read -r -d '' expected_output <<'EOF'
────┬─────────┬─────────┬───────┬───┐
⇨⋅⋅⋅│      ⋅⋅⋅│         │    ⋅⋅⋅│   │
┌─┐⋅└─┐ ┌─┐⋅│⋅└─┐ ──┬── │ ──┐⋅│⋅│ ──┘
│ │⋅⋅⋅│ │ │⋅│⋅⋅⋅│   │   │   │⋅│⋅│  ⋅⇨
│ └─┐⋅│ │ │⋅├─┐⋅└─┐ └─┐ │ ┌─┘⋅│⋅│ │⋅│
│   │⋅│   │⋅│ │⋅⋅⋅│   │ │ │⋅⋅⋅│⋅│ │⋅│
│ ──┘⋅├───┘⋅│ └──⋅│ │ └─┘ │⋅┌─┘⋅│ │⋅│
│⋅⋅⋅⋅⋅│⋅⋅⋅⋅⋅│    ⋅│ │     │⋅│⋅⋅⋅│ │⋅│
│⋅────┤⋅────┴───┐⋅├─┴───┐ │⋅│⋅┌─┴─┤⋅│
│⋅⋅⋅⋅⋅│⋅⋅⋅⋅⋅⋅⋅⋅⋅│⋅│⋅⋅⋅⋅⋅│ │⋅│⋅│⋅⋅⋅│⋅│
├────⋅└────────⋅│⋅│⋅┌──⋅└─┘⋅│⋅│⋅│⋅│⋅│
│    ⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅│⋅⋅⋅│  ⋅⋅⋅⋅⋅│⋅⋅⋅│⋅⋅⋅│
└───────────────┴───┴───────┴───┴───┘
EOF

  # Run the script and compare the output to the expected output
  result="$(echo "$input" | gawk -f maze-runner.awk)"
  [ "$result" == "$expected_output" ]
}
